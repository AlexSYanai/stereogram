<div class="row collapse partial snippet" data-source-id="<%= snippet.track.source_id %>" data-start-time="<%= snippet.start_time %>" data-end-time="<%= snippet.end_time %>" >
  <div class="small-2 columns padded-column">
    <% if !snippet.track.artwork_url.empty? %>
      <img class="album_art" src="<%= snippet.track.artwork_url %>">
    <% else %>
      <img class="album_art" src="<%= asset_path('logo.png') %>">
    <% end %>
  </div>

  <div class="small-offset-1 small-6 columns padded-column">
    <% if !snippet.track.artwork_url.empty? %>
      <span>Title: </span><%= link_to snippet.track.title, track_path(id: snippet.track.id), class: "link_artist" %>
    <% else %>
      Track Title:
    <% end %><br>

    <% if !snippet.track.artist.empty? %>
      <span>Artist: </span><%= link_to snippet.track.artist, user_path(id: snippet.track.user_id), class: "link_artist" %>
    <% else %>
      <span>Artist: </span>
    <% end %><br>

    <span>Created By:</span> <%= snippet.original_creator.full_name %>
  </div>

  <div class="small-2 end columns padded-column">
    <%= link_to image_tag('share.png', :class => 'track-icon'), "#", id: snippet.id, class: "item share pulse" %>

    <%= link_to image_tag('like.png', :class => 'snippet-like track-icon'), "#", id: snippet.id, class: "item like pulse" %>
    <div class='score' id='<%= snippet.id %>'><%= snippet.score %></div>
  </div>
</div>
