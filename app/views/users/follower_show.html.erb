<ul>
  <h2>Followers</h2>

  <div class="followers-column">
    <% @user.followers.each do |user| %>
      <span>
        <div class="followers-picture">
          <%= link_to image_tag(user.profile_img_url), user_path(user) %>
        </div>
        <div class="followers-name">
        <%= link_to "#{user.full_name}", user_path(user) %>
      </div>
      <div class="followers-audio">
        <p><%= user.tracks.count %> Tracks
        <%= user.snippets.count %> Snippets</p>
      </div>
    </span>
    <% end %>
  </div>
</div>
</ul>
