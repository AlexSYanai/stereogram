<ul class="small-block-grid-3">
  <li><%= image_tag (@user.profile_img_url), :class => "profile_image" %></li>
  <li class="username"><%= @user.full_name %></li>
  <li class="follow_div"><a href="<%= following_user_path(@user) %>">
  <%= @user.following.count %> Following</a><br>
  <a href="<%= followers_user_path(@user) %>">
  <%= @user.followers.count %> Followers</p></a><br>
  <%= render 'follow_form'%>
  </li>
</ul>

<div class="row">
<%= render :partial => 'soundcloud/connect' %>
</div>





<div class='user-tracks'>
  <% @user.tracks.each do |track| %>
    <%= render :partial => 'tracks/track', :locals => {:track => @track} %>
  <% end %>
</div>

<div class='user-snippets'>
    <% @user.snippets.each do |snippet| %>
      <div class='snippet' data-source-id="<%= snippet.track.source_id %>" data-start-time="<%= snippet.start_time %>" data-end-time="<%= snippet.end_time %>" >
        <p>A Snippet from <%= snippet.original_creator.full_name %></p>
        <img src="<%= snippet.track.artwork_url %>">
      </div>
    <% end %>
  <% else %>
    <h3>You haven't made any snippets yet</h3>
  <% end %>
</div>
